@using Microsoft.AspNet.Identity
@model IEnumerable<VirtualProofFinal.Models.Proof>

@{
    ViewBag.Title = "Generated Proofs";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Generate New Proof", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProofName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaperSize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Orientation)
        </th>
        <th>
            Image
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProofName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaperSize)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Orientation)
        </td>
        <td>
            <img class="generated" src="~/Images/@User.Identity.GetUserId()/@item.ProofName/@item.ImagePath" alt="" width="200px" height="auto"/>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
